<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="login2fa.Views.LoginPage"
             Title="Iniciar Sesión"
             BackgroundColor="#F8F9FA">

    <ScrollView>
        <Grid RowDefinitions="*, Auto, *" Padding="30,20">

            <!-- Espaciador superior -->
            <BoxView Grid.Row="0" />

            <!-- Contenedor principal del formulario -->
            <Frame Grid.Row="1" 
                   BackgroundColor="White"
                   CornerRadius="20"
                   HasShadow="True"
                   Padding="0"
                   Margin="0,20">

                <StackLayout Padding="30,40" Spacing="25">

                    <!-- Título y subtítulo -->
                    <StackLayout Spacing="8" Margin="0,0,0,20">
                        <Label Text="¡Bienvenido!" 
                               FontSize="28" 
                               FontAttributes="Bold"
                               TextColor="#2C3E50"
                               HorizontalOptions="Center" />
                        <Label Text="Inicia sesión en tu cuenta" 
                               FontSize="16"
                               TextColor="#7F8C8D"
                               HorizontalOptions="Center" />
                    </StackLayout>

                    <!-- Campo Usuario -->
                    <StackLayout Spacing="8">
                        <Label Text="Usuario" 
                               FontSize="14" 
                               FontAttributes="Bold"
                               TextColor="#34495E" />
                        <Frame BackgroundColor="#F8F9FA" 
                               CornerRadius="12" 
                               Padding="0" 
                               HasShadow="False"
                               BorderColor="Transparent">
                            <Entry Placeholder="Ingresa tu usuario y/o email" 
                                   Text="{Binding Usuario}"
                                   FontSize="16"
                                   TextColor="#2C3E50"
                                   PlaceholderColor="#BDC3C7"
                                   BackgroundColor="Transparent"
                                   Margin="15,12" />
                        </Frame>
                    </StackLayout>

                    <!-- Campo Contraseña -->
                    <StackLayout Spacing="8">
                        <Label Text="Contraseña" 
                               FontSize="14" 
                               FontAttributes="Bold"
                               TextColor="#34495E" />
                        <Frame BackgroundColor="#F8F9FA" 
                               CornerRadius="12" 
                               Padding="0" 
                               HasShadow="False"
                               BorderColor="Transparent">
                            <Entry Placeholder="Ingresa tu contraseña" 
                                   IsPassword="True" 
                                   Text="{Binding Contrasena}"
                                   FontSize="16"
                                   TextColor="#2C3E50"
                                   PlaceholderColor="#BDC3C7"
                                   BackgroundColor="Transparent"
                                   Margin="15,12" />
                        </Frame>
                    </StackLayout>

                    <!-- Botones -->
                    <StackLayout Spacing="15" Margin="0,20,0,0">

                        <!-- Botón Iniciar Sesión -->
                        <Button Text="Iniciar Sesión" 
                                Command="{Binding LoginCommand}"
                                BackgroundColor="#3498DB"
                                TextColor="White"
                                FontSize="16"
                                FontAttributes="Bold"
                                CornerRadius="12"
                                HeightRequest="50" />

                        <!-- Separador -->
                        <StackLayout Orientation="Horizontal" 
                                     HorizontalOptions="FillAndExpand" 
                                     Margin="0,10">
                            <BoxView BackgroundColor="#E0E0E0" 
                                     HeightRequest="1" 
                                     HorizontalOptions="FillAndExpand" 
                                     VerticalOptions="Center" />
                            <Label Text="  o si no tienes cuenta registrate " 
                                   TextColor="#95A5A6" 
                                   FontSize="14"
                                   VerticalOptions="Center" />
                            <BoxView BackgroundColor="#E0E0E0" 
                                     HeightRequest="1" 
                                     HorizontalOptions="FillAndExpand" 
                                     VerticalOptions="Center" />
                        </StackLayout>

                        <!-- Botón Registrarse -->
                        <Button Text="Crear cuenta nueva" 
                                Clicked="OnRegistroClicked"
                                BackgroundColor="Transparent"
                                TextColor="#3498DB"
                                FontSize="16"
                                FontAttributes="Bold"
                                BorderColor="#3498DB"
                                BorderWidth="2"
                                CornerRadius="12"
                                HeightRequest="50" />

                    </StackLayout>

                </StackLayout>

            </Frame>

            <!-- Espaciador inferior -->
            <BoxView Grid.Row="2" />

        </Grid>
    </ScrollView>

</ContentPage>